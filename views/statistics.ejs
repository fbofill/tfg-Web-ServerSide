<%- include('./partials/navbar.ejs'); %>
<% var nota = 0;  %>
<% var i = 0;  %>
<h1 class="mt-4"><%= cursos.name %></h1>
<p class="lead mb-3">Estad√≠sticas</p>

<div class="container">
    <div class="container float-left col-md-6">
        <h3>Alumnos que han completado el curso</h3>
        <ul class="list-group">
            <% completados.forEach(function(completados){%>
                <% nota += completados.score %> 
                <% i ++ %> 
                <li class="list-group-item d-flex justify-content-between align-items-center"><div class="container">
                    <div class="float-left">
                        <a href=""> </a><%= completados.usuario %> 
                    </div>
                    <div class="float-right">
                        <span class="badge badge-primary badge-pill"><%= completados.score %> </span>  
                    </div>
                </div></li>
            <% })%>
        </ul>
    </div>
    <div class="container float-left col-md-6">
        <h3>Nota media del curso</h3>
        <h3 class="primary counter-count"><%= nota/i %> </h3>
    </div>
</div>