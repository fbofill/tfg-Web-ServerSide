<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Inicia sesion</h1>
        <%- include('./partials/messages.ejs'); %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Introduce tu email"
            />
          </div>
          <div class="form-group">
            <label for="password">Contraseña</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Introduce tu contrasña"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Inicia sesion</button>
        </form>
        <p class="lead mt-4">
          No tengo cuenta <a href="/users/register">Crear cuenta</a>
        </p>
      </div>
    </div>
  </div>