<%- include('./partials/navbar.ejs'); %>
<h1 class="mt-4">RANKING</h1>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Posicion</th>
            <th>Nombre</th>
            <th>Puntos</th>
        </tr>
    </thead>
    <tbody>
        <% var i=1 ;%>
        <% user.forEach(function(user){ %>
        <tr>
            <td><%= i%></td>
            <td><a href="/profile/?id=<%= user.id %>" ><%= user.name %></td></a>
            <td><%= user.points %></td>
        </tr>
        <%  i++; %>    
        <% }) %>       
    </tbody>
</table>
